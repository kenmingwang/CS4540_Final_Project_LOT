@model CS4540_A2.Models.CourseFeedback

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align:center">@Html.DisplayFor(model => model.Course.Dept) @Html.DisplayFor(model => model.Course.Number) Feedback</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            Professor Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Email)
        </dd>
        <dt class="col-sm-2">
            Effectiveness
        </dt>
        @*Credit Rating Star at CodePen: https://codepen.io/Bluetidepro/pen/GkpEa*@
        <dd class="col-sm-10">
            <div class="star-ratings-sprite"><span style="width: @Html.DisplayFor(model => model.AvgCourseEffectiveRate)%" class="star-ratings-sprite-rating"></span></div>
        </dd>
        <dt class="col-sm-2">
            Organization
        </dt>
        <dd class="col-sm-10">
            <div class="star-ratings-sprite"><span style="width: @Html.DisplayFor(model => model.AvgCourseOrganizedRate)%" class="star-ratings-sprite-rating"></span></div>
        </dd>
        <dt class="col-sm-2">
            Objective Met
        </dt>
        <dd class="col-sm-10">
            <div class="star-ratings-sprite"><span style="width: @Html.DisplayFor(model => model.AvgCourseObjMetRate)%" class="star-ratings-sprite-rating"></span></div>
        </dd>
        <dt class="col-sm-2">
            Overall
        </dt>
        <dd class="col-sm-10">
            <div class="star-ratings-sprite"><span style="width: @Html.DisplayFor(model => model.AvgCourseOverallRate)%" class="star-ratings-sprite-rating"></span></div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.fId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
